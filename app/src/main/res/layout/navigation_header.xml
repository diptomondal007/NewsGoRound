<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/background_material_red"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/profile"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dipto Mondal"
        android:textSize="16sp"
        android:textColor="#3dd3de"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/username_navigation_drawer"
        android:layout_above="@+id/user_email_navigation_drawer"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@host.com"
        android:id="@+id/user_email_navigation_drawer"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:textColor="#22fff7"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/username_navigation_drawer"
        android:layout_alignStart="@+id/username_navigation_drawer" />

</RelativeLayout>